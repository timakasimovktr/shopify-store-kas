{%- assign _section = section.settings -%}

{%- if _section.embed_form != blank -%}
  <div class="subscribe">
    <div class="shell">
      <div class="subscribe__inner">
        {%- if _section.title != blank -%}
          <h2 class="visible-xs-block">{{ _section.title | newline_to_br }}</h2>
        {%- endif -%}

        {%- if _section.image != blank -%}
          <div class="subscribe__image lazyload" data-sizes="auto" data-bgset="{{ _section.image | img_url: '600x' }} 600w"></div><!-- /.subscribe__image -->
        {%- endif -%}

        <div class="subscribe__content">
          {%- if _section.title != blank -%}
            <h2 class="hidden-xs">{{ _section.title | newline_to_br }}</h2>
          {%- endif -%}

          {%- if _section.subtitle != blank -%}
            <h4>{{ _section.subtitle | newline_to_br }}</h4>
          {%- endif -%}

          {%- include 'subscribe' with embed_form: _section.embed_form, index: 2 -%}
        </div><!-- /.subscribe__content -->
      </div><!-- /.subscribe__inner -->
    </div><!-- /.shell -->
  </div><!-- /.subscribe -->
{%- endif -%}

{% schema %}
{
  "name": "Subscribe",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
       "type": "image_picker",
       "id": "image",
       "label": "Image"
     },
     {
       "type": "text",
       "id": "embed_form",
       "label": "List ID",
       "info": "Please, use Klaviyo and add list ID"
     }
  ],
  "presets": [
    {
      "name": "Subscribe"
    }
  ]
}
{% endschema %}
