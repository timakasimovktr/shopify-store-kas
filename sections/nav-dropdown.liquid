{% schema %}
{
  "name": "Nav",
  "blocks": [
    {
      "type": "nav-dropdown",
      "name": "Nav Dropdown",
      "settings": [
        {
          "type": "text",
          "id": "link_handle",
          "label": "Link handle"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "link_list",
          "id": "nav_1",
          "label": "Col 1 nav 1"
        },
        {
          "type": "link_list",
          "id": "nav_2",
          "label": "Col 2 nav 1"
        },
        {
          "type": "link_list",
          "id": "nav_3",
          "label": "Col 1 nav 2"
        },
        {
          "type": "link_list",
          "id": "nav_4",
          "label": "Col 2 nav 2"
        },
        {
          "type": "url",
          "id": "box_link",
          "label": "Box link"
        },
        {
          "type": "image_picker",
          "id": "box_thumbnail",
          "label": "Box Thumbnail",
          "info": "If this is set, below image, title, content should be disabled."
        },
        {
          "type": "image_picker",
          "id": "box_image",
          "label": "Box image"
        },
        {
          "type": "textarea",
          "id": "box_title",
          "label": "Box title"
        },
        {
          "type": "textarea",
          "id": "box_content",
          "label": "Box Content"
        }
      ]
    }
  ]
}
{% endschema %}
