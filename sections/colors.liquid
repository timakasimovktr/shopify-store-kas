<script>
  window.productColors = {
    {% for color in _blocks %}
      '{{ color.settings.title | handle }}': '{{ color.settings.color }}'
      {% unless forloop.last %}, {% endunless %}
    {% endfor %}
  };

</script>

{% schema %}
{
  "name": "Colors",
  "blocks": [
    {
      "type": "color",
      "name": "Color",
      "settings": [
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#000"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Color Name"
        }
      ]
    }
  ]
}
{% endschema %}
