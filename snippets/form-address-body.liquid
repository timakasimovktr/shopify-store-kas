  </div><!-- /.form__row -->

  <div class="form__row field-row-address1">
    <label for="field-address-{{ idx }}" class="form__label" hidden >{{ 'customer.addresses.address1' | t }}</label>

    <input type="text" id="field-address-{{ idx }}" class="field" name="address[address1]" value="{{form.address1}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address1' | t }}" required />
  </div><!-- /.form__row -->

  <div class="form__row field-row-address2">
    <label for="field-address2-{{ idx }}" class="form__label" hidden >{{ 'customer.addresses.address2' | t }}</label>

    <input type="text" id="field-address2-{{ idx }}" class="field" name="address[address2]" value="{{form.address2}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address2' | t }}" />
  </div><!-- /.form__row -->

  <div class="form__row field-row-city">
    <label for="field-city-{{ idx }}" class="form__label" hidden >{{ 'customer.addresses.city' | t }}</label>

    <input type="text" id="field-city-{{ idx }}" class="field" name="address[city]" value="{{form.city}}" autocapitalize="words" placeholder="{{ 'customer.addresses.city' | t }}" required />
  </div><!-- /.form__row -->

