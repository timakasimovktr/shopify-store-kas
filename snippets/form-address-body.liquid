    <div class="select">
      <select id="field-province-{{ idx }}" name="address[province]" data-default="{{form.province}}" required></select>
    </div><!-- /.select -->
  </div><!-- /.form__row -->

  <script>
    new Shopify.CountryProvinceSelector('field-country-{{ idx }}', 'field-province-{{ idx }}', { hideElement: 'form-row-province-{{ idx }}'});
