    </div><!-- /.form__col -->

    <div class="form__col">
      <div class="form__row">
        <label for="field-last-name-{{ idx }}" class="form__label" hidden >{{ 'customer.addresses.last_name' | t }}</label>

        <input type="text" id="field-last-name-{{ idx }}" class="field" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words" placeholder="{{ 'customer.addresses.last_name' | t }}" required />
      </div><!-- /.form__row -->
    </div><!-- /.form__col -->
